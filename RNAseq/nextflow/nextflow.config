
params.COVIRT_Code = "/home/ubuntu/COV-IRT"
params.COVIRT_Data = "/home/ubuntu/COV-IRT-Data"

params.raw_reads_dir = "${params.COVIRT_Code}/RNAseq/Fastq_Input_Files_for_Testing"
params.genome_dir = "${params.COVIRT_Data}/filtered"

params.CONDA_Envs = "${params.COVIRT_Code}/RNAseq/Conda_Environments"
process {
  withLabel: "COVIRT_GATK" {
    conda = "${params.CONDA_Envs}/COVIRT_GATK.yml"
  }
  withLabel: "COVIRT_HTStream" {
    conda = "${params.CONDA_Envs}/COVIRT_HTStream.yml"
  }
  withLabel: "COVIRT_RNAseq_R_tools" {
    conda = "${params.CONDA_Envs}/COVIRT_RNAseq_R_tools.yml"
  }
  withLabel: "COVIRT_fastq_to_alignment" {
    conda = "${params.CONDA_Envs}/COVIRT_fastq_to_alignment.yml"
  }
  withLabel: "COVIRT_fgbio" {
    conda = "${params.CONDA_Envs}/COVIRT_fgbio.yml"
  }
  withLabel: "COVIRT_gtfToGenePred" {
    conda = "${params.CONDA_Envs}/COVIRT_gtfToGenePred.yml"
  }
  withLabel: "COVIRT_nextflow" {
    conda = "${params.CONDA_Envs}/COVIRT_nextflow.yml"
  }
  withLabel: "COVIRT_rsem" {
    conda = "${params.CONDA_Envs}/COVIRT_rsem.yml"
  }
}
